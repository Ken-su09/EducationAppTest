<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:layout_margin="10dp"
    android:background="@drawable/ic_class_background_blue">

    <TextView
        android:id="@+id/item_class_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="B6"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_class_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_maths" />

    <TextView
        android:id="@+id/item_class_subject_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Class : "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/item_class_image"
        app:layout_constraintTop_toBottomOf="@+id/item_class_image" />

    <TextView
        android:id="@+id/item_class_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maths"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_class_subject_title"
        app:layout_constraintStart_toEndOf="@+id/item_class_subject_title"
        app:layout_constraintTop_toTopOf="@+id/item_class_subject_title" />

    <TextView
        android:id="@+id/item_class_hour_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Heure : "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/item_class_subject_title"
        app:layout_constraintTop_toBottomOf="@+id/item_class_subject_title" />

    <TextView
        android:id="@+id/item_class_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8h - 10h"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_class_hour_title"
        app:layout_constraintStart_toEndOf="@+id/item_class_hour_title"
        app:layout_constraintTop_toTopOf="@+id/item_class_hour_title" />

    <TextView
        android:id="@+id/item_class_teacher_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Prof : "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/item_class_hour_title"
        app:layout_constraintTop_toBottomOf="@+id/item_class_hour_title" />

    <TextView
        android:id="@+id/item_class_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr. Onizuka"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_class_teacher_title"
        app:layout_constraintStart_toEndOf="@+id/item_class_teacher_title"
        app:layout_constraintTop_toTopOf="@+id/item_class_teacher_title" />

</androidx.constraintlayout.widget.ConstraintLayout>